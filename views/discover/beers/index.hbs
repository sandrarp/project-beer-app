{{#with beer}}
<a href="/discover">Descubre</a> / <a href="/discover/beers">Cervezas</a> / {{name}}
<h1>{{name}}</h1>
<div class="row">
  <div class="col-2">
    <img src="{{image}}" alt="" width="200">
    <p>{{description}}</p>
    <p>{{vol}} | {{kcal}}</p>
    <p>{{beertype}}</p>
    <p>Una cerveza de:</p>
    <a href="/discover/breweries/{{brewery.id}}">
      <img src="{{brewery.image}}" width="50" alt="">
      <p>{{brewery.name}}</p>
      <p>{{brewery.city}}, {{brewery.country}}</p>
    </a>
  </div>
  {{/with}}
</div>

