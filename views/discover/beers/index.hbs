{{#with beer}}
<div class="PAGE-BREADCRUMB"><a href="/discover">Descubre</a> / <a href="/discover/beers">Cervezas</a> / {{name}}</div>
<div class="row container-centered single">
  <div class="col-12 col-sm-3">
    <img src="{{image}}" alt="" height="500">
    {{#if ../admin}}
    <a href="#" class="btn btn-light" data-toggle="modal" data-target="#uploadImage">
      AÃ±adir/Editar imagen
    </a>
    {{/if}}
  </div>
  <div class="col">
    <h1 class="page-title title-2 mb-3">{{name}}</h1>
    <p class="page-title title-2 mb-3">{{vol}}</p>
    <p class="title-3">{{beertype}}</p>
    <p>{{kcal}}</p>
    <div class="">
          <a href="/discover/breweries/{{brewery.id}}">
          <img src="{{brewery.image}}" width="50" alt="" class="mb-2">
          <p>{{brewery.name}}</p>
        </a>
    </div>
    <div class="meta-brewery">
      <p>{{brewery.city}}, {{brewery.country}}</p>
    </div>
    <p>{{description}}</p>
    <div class="badges">
      <ul class="list-inline d-flex">
        {{#if isGlutenFree}}<li class="list-inline-item"><img src="/images/icons/glutenFree.png"></li>{{/if}}
        {{#if isSeasonal}}<li class="list-inline-item"><img src="/images/icons/seasonal.png"></li>{{/if}}
      </ul>
    </div>
  </div>
  {{/with}}
</div>

<!-- Modal -->
<div class="modal fade" id="uploadImage" tabindex="-1" role="dialog" aria-labelledby="uploadImageLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="uploadImageLabel">Subir imagen</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <img src="{{image}}" alt="" width="200">
        <form action="/admin/beer/image/change/{{beer.id}}" method="post" enctype="multipart/form-data">
            <input type="file" name="photo" class="mt-4">
            <input type="submit" class="btn btn-primary btn-block mt-5" value="SAVE">
        </form>
      </div>
    </div>
  </div>
</div>